{{#resume.basics}}
  <table style="border: none;" width="100%" cellspacing="0" cellpadding="0">
    <tbody>
    <tr>
      <td><h1>{{name}}</h1></td>
      <td style="text-align: right;" rowspan="2">
        {{#if image}}
          <img src="{{image}}" alt="profile-pic" width="100" height="100">
        {{/if}}
        {{#if picture}}
          <img src="{{picture}}" alt="profile-pic" width="50" height="50">
        {{/if}}
      </td>
    </tr>
    <tr>
      <td><h2>{{label}}</h2></td>
    </tr>
    <tr>
      <td height="40" colspan="2">
        <h5>
          {{#location}}
            {{address}}, {{postalCode}} {{city}}
          {{/location}}
          &nbsp;|&nbsp;
          {{> word/info-tag text=this.email isEmail=true url=(concat "mailto:" this.email)}}
          &nbsp;|&nbsp;
          {{> word/info-tag text=this.phone}}
          &nbsp;|&nbsp;
          {{> word/info-tag text=this.website url=(concat "https://" this.website)}}
        </h5>
      </td>
    </tr>
    </tbody>
  </table>
{{/resume.basics}}
